{
  "name": "next-js-csr-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "client:install": "cd client && npm install",
    "server:install": "cd server && npm install",
    "install:all": "npm install && npm run client:install && npm run server:install",
    "client:dev": "cd client && npm run dev",
    "server:dev": "cd server && npm run dev",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "client:build": "cd client && npm run build",
    "server:build": "cd server && npm run build",
    "build": "npm run client:build && npm run server:build",
    "client:start": "cd client && npm run start",
    "server:start": "cd server && npm run start",
    "start": "npm run server:start",
    "prisma:generate": "cd server && npm run prisma:generate",
    "prisma:migrate": "cd server && npm run prisma:migrate",
    "prisma:push": "cd server && npm run prisma:push",
    "prisma:studio": "cd server && npm run prisma:studio",
    "prisma:seed": "cd server && npm run prisma:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
